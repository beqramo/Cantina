rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() &&
             firestore.get(/databases/(default)/documents/admins/$(request.auth.uid)) != null;
    }

    // Dish images folder
    match /dish-images/{imageId} {
      // Anyone can read dish images
      allow read: if true;

      // Only authenticated users can upload (for requests)
      // Only admins can upload directly
      allow write: if isAuthenticated() &&
                     (request.resource.size < 5 * 1024 * 1024 && // 5MB max
                      request.resource.contentType.matches('image/.*'));

      // Only admins can delete images
      allow delete: if isAdmin();
    }

    // Request images folder (temporary until approved)
    match /request-images/{imageId} {
      // Only authenticated users can read their own request images
      allow read: if isAuthenticated();

      // Any authenticated user can upload request images
      allow write: if isAuthenticated() &&
                     request.resource.size < 5 * 1024 * 1024 && // 5MB max
                     request.resource.contentType.matches('image/.*');

      // Only admins can delete request images
      allow delete: if isAdmin();
    }

    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

