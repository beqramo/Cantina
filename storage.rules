rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated (manager/admin)
    function isAuthenticated() {
      return request.auth != null;
    }

    // Dish images folder - public read, anyone can upload (for pending images)
    match /dish-images/{imageId} {
      // Anyone can read dish images
      allow read: if true;

      // Anyone can upload dish images (for pending approval)
      allow write: if request.resource.size < 5 * 1024 * 1024 && // 5MB max
                     request.resource.contentType.matches('image/.*');

      // Only managers can delete images
      allow delete: if isAuthenticated();
    }

    // Request images folder (temporary until approved)
    match /request-images/{imageId} {
      // Anyone can read request images (needed for public visitors to see their uploaded images)
      allow read: if true;

      // Any authenticated user can upload request images (managers)
      // Public visitors can also upload (for dish requests)
      allow write: if request.resource.size < 5 * 1024 * 1024 && // 5MB max
                     request.resource.contentType.matches('image/.*');

      // Only managers can delete request images
      allow delete: if isAuthenticated();
    }

    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
