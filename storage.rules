rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated (manager/admin)
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if file is a valid image
    function isValidImage() {
      return request.resource.size < 1024 * 1024 && // 1MB max
             request.resource.contentType != null &&
             request.resource.contentType.matches('image/.*');
    }

    // Dish images folder - public read, anyone can upload (for pending images)
    match /dish-images/{imageId} {
      // Anyone can read dish images
      allow read: if true;

      // Anyone can create new dish images (for pending approval)
      // Size must be under 5MB and must be an image type
      allow create: if isValidImage();

      // Anyone can update (overwrite) dish images
      allow update: if isValidImage();

      // Only managers can delete images
      allow delete: if isAuthenticated();
    }

    // Request images folder (temporary until approved)
    match /request-images/{imageId} {
      // Anyone can read request images (needed for public visitors to see their uploaded images)
      allow read: if true;

      // Anyone can create request images (for dish requests)
      allow create: if isValidImage();

      // Anyone can update request images
      allow update: if isValidImage();

      // Only managers can delete request images
      allow delete: if isAuthenticated();
    }

    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
